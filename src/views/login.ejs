<%- include('partials/header', { title: 'Login' }) %>

<section class="card narrow login-card-themed">
  <h1>Dorm 25 Scrapbook</h1>
  <p class="muted">Recliner talks. TT rivalries. Liquid memories.</p>
  <h2>Login</h2>
  <form action="/admin/login" method="POST" class="stack-form">
    <input type="text" name="login_id" placeholder="Username" required />
    <input type="password" name="login_pass" placeholder="Password" required />
    <div class="login-actions">
      <button type="submit" class="secondary-btn">Login</button>
      <% if (oauthReady) { %>
        <a href="/auth/google" class="primary-btn gmail-btn">
          <img src="/gmail-logo.svg" alt="" class="gmail-icon" />
          <span>Login using Gmail</span>
        </a>
      <% } else { %>
        <button type="button" class="primary-btn gmail-btn" disabled>
          <img src="/gmail-logo.svg" alt="" class="gmail-icon" />
          <span>Login using Gmail</span>
        </button>
      <% } %>
    </div>
  </form>
  <p class="muted">Use your official <code>@iima.ac.in</code> ID for Gmail login.</p>

  <% if (allowDevLogin) { %>
    <hr />
    <h2>Dev Login</h2>
    <form action="/auth/dev" method="POST" class="stack-form">
      <input type="email" name="email" placeholder="name@iima.ac.in" required />
      <input type="text" name="display_name" placeholder="Display Name" />
      <button type="submit" class="secondary-btn">Enter Dev Mode</button>
    </form>
  <% } %>
</section>

<%- include('partials/footer') %>
